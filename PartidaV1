class PartidaTiroComArco:
    def __init__(self, jogador1, jogador2):
        self.jogador1 = jogador1
        self.jogador2 = jogador2

    def registrar_pontos(self, jogador, pontos):
        if pontos < 0 or pontos > 10:
            print("Pontuação inválida. Os pontos devem estar entre 0 e 10.")
            return
        
        if jogador == 1:
            self.jogador1.registrar_pontos(pontos)
        elif jogador == 2:
            self.jogador2.registrar_pontos(pontos)
        else:
            print("Jogador inválido.")

    def finalizar_partida(self):
        pontuacao_jogador1 = self.jogador1.obter_pontuacao()
        pontuacao_jogador2 = self.jogador2.obter_pontuacao()

        print(f"Total de pontos do Jogador 1 ({self.jogador1.nome}): {pontuacao_jogador1}")
        print(f"Total de pontos do Jogador 2 ({self.jogador2.nome}): {pontuacao_jogador2}")

        if pontuacao_jogador1 > pontuacao_jogador2:
            print(f"Jogador {self.jogador1.nome} venceu!")
        elif pontuacao_jogador2 > pontuacao_jogador1:
            print(f"Jogador {self.jogador2.nome} venceu!")
        else:
            print("A partida terminou em empate!")


class Jogador:
    def __init__(self, nome):
        self.nome = nome
        self.pontuacao = 0

    def registrar_pontos(self, pontos):
        self.pontuacao += pontos

    def obter_pontuacao(self):
        return self.pontuacao


def main():
    print("Bem-vindo à partida de tiro com arco!")

    nome_jogador1 = input("Digite o nome do Jogador 1: ")
    nome_jogador2 = input("Digite o nome do Jogador 2: ")

    jogador1 = Jogador(nome_jogador1)
    jogador2 = Jogador(nome_jogador2)

    partida = PartidaTiroComArco(jogador1, jogador2)

    rodada = 1
    while True:
        print(f"\nRodada {rodada}:")
        jogador = int(input(f"Qual jogador (1 para {nome_jogador1}, 2 para {nome_jogador2}): "))
        pontos = int(input("Digite os pontos desta seta (0 a 10): "))

        partida.registrar_pontos(jogador, pontos)

        continuar = input("Deseja registrar mais pontos? (s/n): ")
        if continuar.lower() != 's':
            break

        rodada += 1

    print("\nFinalizando a partida...")
    partida.finalizar_partida()


if __name__ == "__main__":
    main()
